#popupBar{
	position: fixed;
	top: 0;
	width: 100%;
	height: 15px;
	margin: 0;
	background-color: #008;
	color: #efece6;
	
	border-width: 4px 0px 4px 4px;
	border-color: #008 #008 #333 #008;
	border-style: solid; 
	padding-bottom: 3px;
	
	z-index: 3; 
	white-space: nowrap;
}

.console{
  position: fixed;
  right: 0px;
  top: 10px;
   z-index: 3;   
}

#consoleContentPanel{
  margin: 16px 16px 32px 16px;
  padding: 0 0 8px 0;
  /*background-color: #ddd;*/
}

#showLinkDiv{
  background-color: #ddd;
}

#consoleTitle{
   cursor: move;
   border: solid;
   border-color: #aaa;
   border-width:0 0 1px 0;
   padding: 0;
   margin: 0;
   text-align: right;
}

.box p, .box ul {
		margin:0;
		padding:4px 10px;
		/*background:#efece6;*/		
}
.box ul{
	   list-style-type: none;
} 

#consoleCloseButton{
	  padding:  0 0.3em 0 0.5em;
}

.fixedAtSouthWestCorner{
  position: fixed;
  _position: absolute;
  z-index: 2;
  top: auto;
  left: 0;
  bottom: 0;
  _bottom:expression(this.style.filter = '', '0');
  _left:expression(
      document.documentElement && document.documentElement.scrollLeft || 
      document.body && body.scrollLeft || 0
      + 0 + 'px'
  );
}
.fixedAtSouthEastCorner, .fixedAtBottom{
  position: fixed;
  _position: absolute;
  z-index: 2;
  top: auto;
  left: auto;
  bottom: 0;   
  right: 0;
  _bottom:expression(this.style.filter = '', '0');
  _right: expression(this.style.filter = '', '0');
}

.fixedAtBottom{
  width: 100%;
  color: #008;
  background-color: transparent #888;
}

