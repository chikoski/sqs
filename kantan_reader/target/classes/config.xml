<config version="1.18">
	<sources>
		<source>
			<frame>

				<!--
					"pageGuideArea" element describes header or footer of a target image which contains a set of black square marks called "Guide Block".
					@param density  Extracting threshold density value(0.0-1.0) to find black pixels. The default value is 0.5.   
					@param height     Extracting ratio(0.0-1.0) of page height. The default value is 0.10.
					@param horizontalMargin    Side skip margin ratio(0.0-1.0) of page width. The default value is 0.03.
					@param headerVerticalMargin    Header skip margin ratio(0.0-1.0) of page height. The default value is 0.005.
					@param footerVerticalMargin    Footer skip margin ratio(0.0-1.0) of page height. The default value is 0.005.
					@param debug      Debug information is shown in console when this param set to true. 
				-->
				<pageGuideArea density="0.5" height="0.10"
					horizontalMargin="0.08" 
					headerVerticalMargin="0.005" footerVerticalMargin="0.005"
					debug="false">

					<!--
						"blockRecognitionFilter" element describes "Guide Block" recognition filter settings.
						@param widthMin    The minimum value of "Guide Block" width ratio(0.0-1.0) to page width. The default value is 0.024.   
						@param widthMax    The maximum value of "Guide Block" width ratio(0.0-1.0) to page width. The default value is 0.051.   
						@param heightMin    The minimum value of "Guide Block" height ratio(0.0-1.0) to pageGuideArea height. The default value is 0.13.   
						@param heightMax    The maximum value of "Guide Block" height ratio(0.0-1.0) to pageGuideArea height. The default value is 0.35.
						@param density Extracting "Guide Block" density threshold ration(0.0-1.0). The default value is 0.75.
					-->
					<blockRecognitionFilter
						widthMin="0.024" widthMax="0.051"
						heightMin="0.13" heightMax="0.35"
						density="0.75" />

					<!--
						"blockRecognition" element describes "Guide Block" recognition settings.
						@param horizontal  Horizontal "Guide Block" edge detection black pixels ratio(0.0-1.0). The default value is 0.5.
						@param vertical    Vertical "Guide Block" edge detection black pixels ratio(0.0-1.0). The default value is 0.5.
						@param density   Extracting threshold density value(0.0-1.0) to find black pixels. The default value is 0.9.
					-->
					<blockRecognition
						horizontal="0.5" vertical="0.5" density="0.9" />

				</pageGuideArea>

				<!--
					"validation" element describes page frame distortion validation threshold..
					@param horizontalDistortion Horizontal distortion allowed threshold ratio(0.0-1.0). The default value is 0.03.
					@param verticalDistortion   Vertical distortion allowed threshold ratio(0.0-1.0). The default value is 0.03.
				-->
				<validation
					checkUpsideDown="true"
					checkEvenOdd="true"
					checkDistortion="true"
					horizontalDistortion="0.03"
					verticalDistortion="0.03" />
	
			</frame>
			<!--
				"markRecognition" element describes mark recognition related settings.
				@param density default value is 0.8
				@resolutionScale default value is 3.0
				@param horizontalMargin Horizontal skip margin width in pixels(72dpi) of extracting "filled mark" area. A positive value makes narrow the mark area. The default value is 3.
				@param verticalMargin Vertical skip margin height in pixels(72dpi) of extracting "filled mark" area. A positive value makes narrow the mark area. The default value is -4.
			-->
			<markRecognition
								algorithm="convolution3x3AverageDensity"
							  density="0.94"
							  noMarkThreshold="0.21"
							  recognitionMargin="0.03"  
							  resolutionScale="2.1"
							  horizontalMargin="2"
							  verticalMargin="-3" />
		</source>
	</sources>

</config>
